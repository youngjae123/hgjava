<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="myapp.homepage" template="/WEB-INF/layout/template.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="body" value="/WEB-INF/layout/home_body.jsp" />
  </definition>
  <definition name = "WILDCARD:main/*" extends="myapp.homepage">
    <put-attribute name="body" value="/WEB-INF/view/{1}.jsp" />
  </definition>
                                                                                                                                                                                                                                                                                                      
  <definition name = "WILDCARD:*/*" extends="myapp.homepage">
    <put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
  </definition>
  
</tiles-definitions>